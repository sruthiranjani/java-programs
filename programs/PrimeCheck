public class PrimeCheck {

    static boolean isPrime(int num) {

        if (num <= 1)
            return false;

        for (int i = 2; i < num; i++) {
            if (num % i == 0)
                return false;
        }
        return true;
    }

    public static void main(String[] args) {

        int number = 7;

        if (isPrime(number))
            System.out.println("Prime number");
        else
            System.out.println("Not a prime number");
    }
}
